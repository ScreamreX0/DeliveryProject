<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserMenuActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/a_user_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        app:menu="@menu/user_top_menu">

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/a_user_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/a_user_bottom_menu"
        android:layout_below="@id/a_user_tool_bar"
        app:layout_constraintBottom_toTopOf="@+id/a_user_bottom_menu"
        app:layout_constraintTop_toBottomOf="@+id/a_user_tool_bar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/a_user_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/user_bottom_menu"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>