<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/i_cart_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Название магазина"
        app:layout_constraintStart_toEndOf="@+id/i_cart_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/i_cart_image"
        android:layout_width="102dp"
        android:layout_height="103dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_shopping_bag_24" />

    <TextView
        android:id="@+id/i_cart_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Название продукта"
        app:layout_constraintEnd_toStartOf="@+id/i_cart_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/i_cart_image"
        app:layout_constraintTop_toBottomOf="@+id/i_cart_shop" />

    <TextView
        android:id="@+id/i_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="28dp"
        android:text="Цена продукта"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/i_cart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="36dp"
        android:text="Кол-во"
        app:layout_constraintEnd_toStartOf="@+id/i_cart_delete_bucket"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/i_cart_delete_bucket"
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>