<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="220dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:text="Смена адреса"
        android:gravity="center"
        style="@style/DefaultDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/d_change_address_field"
        android:layout_width="242dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/new_address"
        android:paddingStart="10dp"
        android:background="@drawable/grey_rect"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/d_change_address_change"
        style="@style/DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Изменить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_change_address_field" />

    <Button
        android:id="@+id/d_change_address_cancel"
        style="@style/DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Отмена"
        app:layout_constraintEnd_toEndOf="@+id/d_change_address_field"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/d_change_address_change"
        app:layout_constraintTop_toBottomOf="@+id/d_change_address_field" />


</androidx.constraintlayout.widget.ConstraintLayout>