<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:id="@+id/i_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:text="some title">

        </TextView>

        <TextView
            android:id="@+id/i_history_products"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="10dp"
            android:text="Продукт1\nПродукт2">

        </TextView>

        <TextView
            android:id="@+id/i_history_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_history_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:paddingBottom="10dp"
            android:text="400 руб.">


        </TextView>

        <TextView
            android:id="@+id/i_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05.03.2022"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp" />
</RelativeLayout>